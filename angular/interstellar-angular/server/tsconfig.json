{
  "compilerOptions": {
    "lib": ["es6"],
    "module": "commonjs",
    "rootDir": ".",
    "noImplicitReturns": true,
    "outDir": "lib",
    "sourceMap": true,
    "target": "es6",
    "strict": true,
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "files": [
    "server.ts",
    "_firebase.ts"
  ],
  "include": [
    "routes/*.ts",
    "models/*.ts"
  ],
  // "extends": "../tsconfig.json",
  "exclude": [
    "../node_modules",
    "../../node_modules",
    "../../../node_modules",
    "node_modules",
    "functions",
    "../src"
  ]
}
